<Window x:Class="WpfApp3.Views.EditWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование товара" Height="890" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="25" Margin="0 10 0 0">Редактирование товара</TextBlock>
            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Артикул:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="ArticleProd" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Название:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="NameProd" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Цена:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="PriceProd" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Количество на складе:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="CountProd" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Скидка:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="Disc" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Максимальная скидка:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="MaxDisc" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Поставщик:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="Provider" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Производитель:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="Manufact" FontSize="20" Width="243"/>

            <TextBlock FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontSize="20" Margin="0 18 0 5">Категория:</TextBlock>
            <TextBox FontFamily="Comic Sans MS" x:Name="Category" FontSize="20" Width="243"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button FontFamily="Comic Sans MS" Width="160" Margin="5" FontSize="18" Content="Сохранить" Click="SaveButton_Click"/>
                <Button FontFamily="Comic Sans MS" Width="160" Margin="5" FontSize="18" Content="Назад" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
